<% include ../partials/header %>

<div class="row">
	<div class="col-md-12">
			
		<div class="thumbnail">
			<img src="<%= user.image %>" alt="user profile image">
		</div>
		<div class="panel panel-info">
		 <div class="panel-heading">
		 	<h3 class="panel-title"><%= user.firstName %>Profile</h3>
		 	</div>
		 	<div class="panel-body">
              <p><%= user.message %></p>
           </div>
           <ul class="list-group">
            <li class="list-group-item"><p>EMAIL ID: <a href="mailto:<%= user.email %>"><%= user.email %></a></p></li>
            </ul>
		</div>
		
	</div>
	<div class="col-md-8">
		<h3><%= user.username %>'s campgrounds:</h3>
		<ul>
		<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
		<% }); %>
		</ul>
	</div>
</div>

<% include ../partials/footer %>